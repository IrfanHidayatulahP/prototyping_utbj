<%- include('../../partials/header.ejs') %>

    <style>
        body {
            background: #e6e6e6;
            font-family: 'Inter', sans-serif;
        }

        .detail-page {
            width: 100%;
            min-height: 100vh;
        }

        .detail-wrapper {
            max-width: 1200px;
            margin: 0 auto;
            padding: 32px 40px;
        }

        .page-title {
            font-size: 26px;
            font-weight: 600;
            margin-bottom: 24px;
        }

        .card {
            background: #fff;
            border-radius: 12px;
            padding: 24px 28px;
            margin-bottom: 24px;
        }

        .info-grid {
            display: grid;
            grid-template-columns: 220px 1fr;
            row-gap: 14px;
            column-gap: 20px;
            font-size: 14px;
        }

        .info-label {
            font-weight: 600;
            color: #555;
        }

        .info-value {
            color: #333;
        }

        .badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 14px;
            font-size: 12px;
            background: #f0f0f0;
            border: 1px solid #ccc;
        }

        .actions {
            display: flex;
            gap: 12px;
            margin-top: 24px;
        }

        .btn {
            padding: 8px 18px;
            border-radius: 20px;
            font-size: 13px;
            cursor: pointer;
            border: 1px solid #aaa;
            background: #fff;
            text-decoration: none;
            color: #333;
        }

        .btn:hover {
            background: #f2f2f2;
        }

        .btn-primary {
            background: #2b6cb0;
            color: #fff;
            border-color: #2b6cb0;
        }

        .btn-primary:hover {
            background: #1e4f86;
        }

        .desc-box {
            background: #fafafa;
            border-radius: 10px;
            padding: 16px;
            font-size: 14px;
            line-height: 1.6;
        }
    </style>

    <div class="detail-page">
        <div class="detail-wrapper">

            <h1 class="page-title">Detail Proposal</h1>

            <div class="card">
                <div class="info-grid">
                    <div class="info-label">Judul Penelitian</div>
                    <div class="info-value">
                        <%= proposal.judul %>
                    </div>

                    <div class="info-label">Nama Tim Peneliti</div>
                    <div class="info-value">
                        <%= proposal.pengusul %>
                    </div>

                    <div class="info-label">Skema Penelitian</div>
                    <div class="info-value">
                        <%= proposal.skema %>
                    </div>

                    <div class="info-label">Bidang Penelitian</div>
                    <div class="info-value">
                        <%= proposal.bidang %>
                    </div>

                    <div class="info-label">Usulan Dana</div>
                    <div class="info-value">
                        Rp <%= proposal.dana.toLocaleString('id-ID') %>
                    </div>

                    <div class="info-label">Usulan Luaran</div>
                    <div class="info-value">
                        <%= proposal.luaran %>
                    </div>

                    <div class="info-label">Status</div>
                    <div class="info-value">
                        <span class="badge">
                            <%= proposal.status %>
                        </span>
                    </div>

                    <div class="info-label">File Proposal</div>
                    <div class="info-value">
                        <a href="<%= proposal.file %>" target="_blank">
                            <%= proposal.fileName %>
                        </a>
                    </div>
                </div>
            </div>

            <div class="card">
                <h3 style="margin-bottom: 12px;">Deskripsi Penelitian</h3>
                <div class="desc-box">
                    <%= proposal.deskripsi %>
                </div>
            </div>

            <% if (locals.review) { %>
                <div class="card" style="border-left: 5px solid #2b6cb0;">
                    <h3 style="margin-bottom: 15px; color: #2b6cb0; display: flex; align-items: center; gap: 10px;">
                        <i class='bx bx-check-shield'></i> Hasil Penilaian Reviewer
                    </h3>

                    <div style="display: grid; grid-template-columns: 1fr 200px; gap: 20px;">
                        <div>
                            <table style="width: 100%; border-collapse: collapse; font-size: 14px;">
                                <tr style="background: #f9f9f9;">
                                    <td style="padding: 10px; border: 1px solid #eee;">Relevansi & Urgensi (30%)</td>
                                    <td style="padding: 10px; border: 1px solid #eee; font-weight: bold;">
                                        <%= review.kriteria1 %>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 10px; border: 1px solid #eee;">Metode & Pustaka (40%)</td>
                                    <td style="padding: 10px; border: 1px solid #eee; font-weight: bold;">
                                        <%= review.kriteria2 %>
                                    </td>
                                </tr>
                                <tr style="background: #f9f9f9;">
                                    <td style="padding: 10px; border: 1px solid #eee;">Potensi Luaran (30%)</td>
                                    <td style="padding: 10px; border: 1px solid #eee; font-weight: bold;">
                                        <%= review.kriteria3 %>
                                    </td>
                                </tr>
                            </table>

                            <div style="margin-top: 15px;">
                                <small style="color: #777; font-weight: 600;">Catatan Reviewer:</small>
                                <p
                                    style="background: #fff8e1; padding: 10px; border-radius: 6px; font-style: italic; font-size: 14px; margin-top: 5px;">
                                    "<%= review.catatan %>"
                                </p>
                            </div>
                        </div>

                        <div
                            style="text-align: center; background: #f0f4f8; padding: 20px; border-radius: 10px; display: flex; flex-direction: column; justify-content: center;">
                            <span style="font-size: 12px; color: #555; text-transform: uppercase;">Skor Akhir</span>
                            <div style="font-size: 42px; font-weight: 800; color: #2b6cb0;">
                                <%= review.totalSkor %>
                            </div>
                            <div style="margin-top: 10px;">
                                <span class="badge"
                                    style="background: #2b6cb0; color: #fff; border: none; padding: 6px 12px;">
                                    <%= review.rekomendasi %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

                    <div class="actions">
                        <a href="/reviewer/proposal" class="btn">‚Üê Kembali</a>

                        <% if (locals.review) { %>
                            <a href="/reviewer/proposal/<%= proposal.id %>/review" class="btn">Edit Penilaian</a>
                            <% } else { %>
                                <a href="/reviewer/proposal/<%= proposal.id %>/review" class="btn btn-primary">Mulai
                                    Review</a>
                                <% } %>
                    </div>

        </div>
    </div>

    <%- include('../../partials/footer.ejs') %>