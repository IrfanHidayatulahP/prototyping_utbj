<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <title>
        <%= title || 'Dashboard' %>
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Boxicons -->
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', sans-serif;
        }

        body {
            background: #f5f7fb;
        }

        .app-container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background: #1e3a8a;
            color: #fff;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

        .logo {
            font-size: 22px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 30px;
        }

        .menu {
            list-style: none;
        }

        .menu li {
            margin-bottom: 10px;
        }

        .menu a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 14px;
            border-radius: 8px;
            color: #e5e7eb;
            text-decoration: none;
            font-size: 15px;
            transition: 0.2s;
        }

        .menu a:hover,
        .menu a.active {
            background: #2563eb;
            color: #fff;
        }

        .menu i {
            font-size: 20px;
        }
    </style>
</head>

<body>

    <% const role=(typeof user !=='undefined' && user.role) ? user.role : '' ; %>

        <div class="app-container">
            <aside class="sidebar">
                <div class="logo">
                    <% if (role==='admin' ) { %>ADMIN PANEL
                        <% } else if (role==='dosen' ) { %>DOSEN
                            <% } else if (role==='reviewer' ) { %>REVIEWER
                                <% } else { %>SISTEM
                                    <% } %>
                </div>

                <ul class="menu">

                    <!-- ================= ADMIN ================= -->
                    <% if (role==='admin' ) { %>
                        <li>
                            <a href="/admin/dashboard" class="<%= active==='dashboard'?'active':'' %>">
                                <i class='bx bxs-dashboard'></i> Dashboard
                            </a>
                        </li>
                        <li>
                            <a href="/admin/gelombang" class="<%= active==='gelombang'?'active':'' %>">
                                <i class='bx bx-calendar'></i> Kelola Gelombang
                            </a>
                        </li>
                        <li>
                            <a href="/admin/proposal" class="<%= active==='proposal'?'active':'' %>">
                                <i class='bx bx-file'></i> Kelola Proposal
                            </a>
                        </li>
                        <li>
                            <a href="/admin/penelitian" class="<%= active==='penelitian'?'active':'' %>">
                                <i class='bx bx-book'></i> Kelola Penelitian
                            </a>
                        </li>
                        <li>
                            <a href="/admin/reviewer" class="<%= active==='reviewer'?'active':'' %>">
                                <i class='bx bx-user-check'></i> Kelola Reviewer
                            </a>
                        </li>
                        <% } %>

                            <!-- ================= DOSEN ================= -->
                            <% if (role==='dosen' ) { %>
                                <li>
                                    <a href="/dosen/dashboard" class="<%= active==='dashboard'?'active':'' %>">
                                        <i class='bx bxs-dashboard'></i> Dashboard
                                    </a>
                                </li>
                                <li>
                                    <a href="/dosen/proposal/ajukan"
                                        class="<%= active==='ajukan-proposal'?'active':'' %>">
                                        <i class='bx bx-edit'></i> Ajukan Proposal
                                    </a>
                                </li>
                                <li>
                                    <a href="/dosen/proposal" class="<%= active==='proposal-saya'?'active':'' %>">
                                        <i class='bx bx-file'></i> Proposal Saya
                                    </a>
                                </li>
                                <li>
                                    <a href="/dosen/penelitian" class="<%= active==='penelitian'?'active':'' %>">
                                        <i class='bx bx-book'></i> Penelitian Aktif
                                    </a>
                                </li>
                                <li>
                                    <a href="/dosen/panduan" class="<%= active==='panduan'?'active':'' %>">
                                        <i class='bx bx-download'></i> Template & Panduan
                                    </a>
                                </li>
                                <% } %>

                                    <!-- ================= REVIEWER ================= -->
                                    <% if (role==='reviewer' ) { %>
                                        <li>
                                            <a href="/reviewer/dashboard"
                                                class="<%= active==='dashboard'?'active':'' %>">
                                                <i class='bx bxs-dashboard'></i> Dashboard
                                            </a>
                                        </li>
                                        <li class="<%= active === 'proposal' ? 'active' : '' %>">
                                            <a href="/reviewer/proposal">
                                                <i class="bx bx-file"></i>
                                                Proposal
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/reviewer/penelitian"
                                                class="<%= active==='penelitian'?'active':'' %>">
                                                <i class='bx bx-book'></i> Penelitian
                                            </a>
                                        </li>
                                        <% } %>

                </ul>
            </aside>