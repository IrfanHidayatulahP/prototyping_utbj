<%- include('../../partials/header') %>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .bg-custom-gray {
            background-color: #F4F5F7;
        }
    </style>

    <div class="flex-1 flex flex-col h-screen overflow-hidden relative bg-custom-gray">

        <header
            class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-4 sm:px-6 lg:px-8 shrink-0 z-20">
            <button class="md:hidden p-2 text-gray-500 hover:bg-gray-100 rounded-lg"><i
                    class="ph ph-list text-2xl"></i></button>
            <h1 class="text-lg font-semibold text-gray-800 hidden sm:block">Dashboard Admin</h1>
            <div class="flex items-center gap-4">
                <div class="text-right hidden sm:block">
                    <p class="text-sm font-medium text-gray-700">
                        <%= typeof user !=='undefined' ? user.name : 'Administrator' %>
                    </p>
                    <p class="text-xs text-gray-500">Super Admin</p>
                </div>
                <div
                    class="h-9 w-9 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold border border-indigo-200 shadow-sm">
                    <i class="ph ph-user"></i>
                </div>
            </div>
        </header>

        <main class="flex-1 overflow-y-auto p-4 sm:p-8 pb-32">

            <div class="mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Menu Reviewer</h2>
            </div>

            <div class="mb-6">
                <div class="relative max-w-md">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="ph ph-list text-gray-500 text-lg"></i>
                    </div>
                    <input type="text"
                        class="block w-full pl-10 pr-10 py-2.5 border border-gray-300 rounded-full leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 sm:text-sm"
                        placeholder="Cari Reviewer">
                    <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                        <i class="ph ph-magnifying-glass text-gray-400 text-lg"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-sm p-6 flex flex-col" style="min-height: 600px;">

                <div class="overflow-hidden">
                    <table class="w-full text-left border-collapse">

                        <thead>
                            <tr>
                                <th
                                    class="py-4 px-4 w-16 text-center font-bold text-gray-600 border-b-2 border-gray-300 border-r border-gray-200">
                                    No.
                                </th>
                                <th
                                    class="py-4 px-6 font-bold text-gray-600 border-b-2 border-gray-300 border-r border-gray-200">
                                    Nama Reviewer
                                </th>
                                <th
                                    class="py-4 px-6 font-bold text-center text-gray-600 border-b-2 border-gray-300 border-r border-gray-200">
                                    Status Reviewer
                                </th>
                                <th
                                    class="py-4 px-6 font-bold text-center text-gray-600 border-b-2 border-gray-300 border-r border-gray-200">
                                    Beban Review Proposal
                                </th>

                                <th
                                    class="py-4 px-6 font-bold text-center text-gray-600 border-b-2 border-gray-300 border-r border-gray-200">
                                    Batas Maksimal<br>Review Proposal
                                </th>
                                <th class="py-4 px-6 font-bold text-center text-gray-600 border-b-2 border-gray-300">
                                    Batas Maksimal<br>Review Penelitian
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            <% if (typeof reviewerList !=='undefined' && reviewerList.length> 0) { %>

                                <% reviewerList.forEach((item, index)=> { %>
                                    <tr>
                                        <td
                                            class="py-5 px-4 text-center text-gray-500 border-b border-gray-200 border-r border-gray-200">
                                            <%= index + 1 %>
                                        </td>

                                        <td
                                            class="py-5 px-6 text-gray-800 border-b border-gray-200 border-r border-gray-200">
                                            <%= item.nama %>
                                        </td>

                                        <td
                                            class="py-5 px-6 text-center text-gray-800 border-b border-gray-200 border-r border-gray-200">
                                            <%= item.status %>
                                        </td>

                                        <td
                                            class="py-5 px-6 text-center border-b border-gray-200 border-r border-gray-200">
                                            <div class="flex flex-col text-sm">
                                                <span class="text-gray-700 font-medium">
                                                    Total: <%= item.beban.total %>
                                                </span>
                                                <span class="text-green-600">
                                                    ✔ Selesai: <%= item.beban.reviewed %>
                                                </span>
                                                <span class="text-orange-500">
                                                    ⏳ Pending: <%= item.beban.pending %>
                                                </span>
                                            </div>
                                        </td>

                                        <td
                                            class="py-5 px-6 text-center text-gray-800 border-b border-gray-200 border-r border-gray-200">
                                            <%= item.batas_proposal %>
                                        </td>

                                        <td class="py-5 px-6 text-center text-gray-800 border-b border-gray-200">
                                            <%= item.batas_penelitian %>
                                        </td>
                                    </tr>
                                    <% }) %>

                                        <% } else { %>
                                            <tr>
                                                <td colspan="5" class="px-6 py-12 text-center text-gray-400">
                                                    Data reviewer tidak ditemukan.
                                                </td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>

                <div class="mt-auto pt-4 border-t border-gray-300 text-right">
                    <span class="text-sm font-bold text-gray-800">
                        Total Reviewer : <%= typeof reviewerList !=='undefined' ? reviewerList.length : 0 %>
                    </span>
                </div>

            </div>

        </main>
    </div>

    <%- include('../../partials/footer') %>