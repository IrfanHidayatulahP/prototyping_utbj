<%- include('../../partials/header') %>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .bg-custom-gray {
            background-color: #F4F5F7;
        }
    </style>

    <div class="flex-1 flex flex-col h-screen overflow-hidden bg-custom-gray">
        <header
            class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-4 sm:px-6 lg:px-8 shrink-0 z-20">
            <h1 class="text-lg font-semibold text-gray-800">Detail Proposal Penelitian</h1>
            <div class="flex items-center gap-4">
                <div
                    class="h-9 w-9 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 border border-indigo-200 shadow-sm">
                    <i class="ph ph-user"></i>
                </div>
            </div>
        </header>

        <main class="flex-1 overflow-y-auto p-4 sm:p-8 pb-32">
            <div class="mb-6">
                <nav class="flex mb-2 text-sm text-gray-500">
                    <a href="javascript:history.back()"
                        class="hover:text-indigo-600 flex items-center gap-1 transition-colors">
                        <i class="ph ph-arrow-left"></i> Kembali ke Daftar Penelitian
                    </a>
                </nav>
                <h2 class="text-2xl font-bold text-gray-900 leading-tight">
                    <%= proposal.judul %>
                </h2>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <div class="lg:col-span-2 space-y-6">
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                        <div class="p-6 border-b border-gray-100 bg-gray-50/50">
                            <h3 class="font-bold text-gray-800 flex items-center gap-2">
                                <i class="ph ph-info text-indigo-600 text-xl"></i> Informasi Penelitian
                            </h3>
                        </div>
                        <div class="p-6">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-8">
                                <div>
                                    <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Nama
                                        Peneliti</p>
                                    <p class="text-sm font-medium text-gray-800 mt-1">
                                        <%= proposal.peneliti %>
                                    </p>
                                </div>
                                <div>
                                    <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Skema
                                        Penelitian</p>
                                    <p class="text-sm font-medium text-gray-800 mt-1">
                                        <%= proposal.skema %>
                                    </p>
                                </div>
                                <div>
                                    <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Status Saat
                                        Ini</p>
                                    <span
                                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800 mt-1">
                                        <%= proposal.status %>
                                    </span>
                                </div>
                                <div>
                                    <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Total Dana
                                    </p>
                                    <p class="text-sm font-bold text-green-600 mt-1">
                                        <%= proposal.dana %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                        <div class="p-6 border-b border-gray-100">
                            <h3 class="font-bold text-gray-800 flex items-center gap-2">
                                <i class="ph ph-file-text text-indigo-600 text-xl"></i> Laporan & Luaran
                            </h3>
                        </div>
                        <div class="p-6">
                            <div class="space-y-4">
                                <div
                                    class="flex items-center justify-between p-3 rounded-lg bg-gray-50 border border-gray-100">
                                    <div class="flex items-center gap-3">
                                        <i
                                            class="ph ph-check-circle text-2xl <%= proposal.laporan_kemajuan ? 'text-green-500' : 'text-gray-300' %>"></i>
                                        <span class="text-sm font-medium text-gray-700">Laporan Kemajuan</span>
                                    </div>
                                    <span
                                        class="text-xs <%= proposal.laporan_kemajuan ? 'text-green-600 font-bold' : 'text-gray-400' %> uppercase">
                                        <%= proposal.laporan_kemajuan ? 'Sudah Diunggah' : 'Belum Ada' %>
                                    </span>
                                </div>
                                <div
                                    class="flex items-center justify-between p-3 rounded-lg bg-gray-50 border border-gray-100">
                                    <div class="flex items-center gap-3">
                                        <i
                                            class="ph ph-check-circle text-2xl <%= proposal.laporan_akhir ? 'text-green-500' : 'text-gray-300' %>"></i>
                                        <span class="text-sm font-medium text-gray-700">Laporan Akhir</span>
                                    </div>
                                    <span
                                        class="text-xs <%= proposal.laporan_akhir ? 'text-green-600 font-bold' : 'text-gray-400' %> uppercase">
                                        <%= proposal.laporan_akhir ? 'Sudah Diunggah' : 'Belum Ada' %>
                                    </span>
                                </div>
                                <div class="p-3 rounded-lg bg-gray-50 border border-gray-100">
                                    <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Luaran
                                        Penelitian</p>
                                    <p class="text-sm text-gray-700">
                                        <%= proposal.luaran || 'Tidak Ada Data Luaran' %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="space-y-6">
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                        <div class="p-6 border-b border-gray-100 bg-indigo-50/50">
                            <h3 class="font-bold text-gray-800 flex items-center gap-2">
                                <i class="ph ph-clipboard-text text-indigo-600 text-xl"></i> Hasil Review
                            </h3>
                        </div>
                        <div class="p-6">
                            <% if (review) { %>
                                <div class="mb-4 text-center p-4 bg-indigo-50 rounded-lg border border-indigo-100">
                                    <p class="text-xs text-indigo-600 font-bold uppercase">Nilai Review</p>
                                    <h4 class="text-3xl font-black text-indigo-700">
                                        <%= review.nilai || '0' %>
                                    </h4>
                                </div>
                                <p class="text-xs font-semibold text-gray-400 uppercase mb-1">Catatan Reviewer</p>
                                <div class="text-sm text-gray-700 italic bg-gray-50 p-3 rounded border border-gray-100">
                                    "<%= review.catatan || '-' %>"
                                </div>
                                <% } else { %>
                                    <div class="text-center py-6">
                                        <i class="ph ph-warning-circle text-4xl text-gray-200 mb-2"></i>
                                        <p class="text-sm text-gray-400 italic">Belum ada hasil review dari reviewer.
                                        </p>
                                    </div>
                                    <% } %>
                        </div>
                    </div>

                    <div
                        class="bg-white rounded-xl shadow-lg border border-indigo-200 overflow-hidden ring-4 ring-indigo-50">
                        <div class="p-6 border-b border-gray-100 bg-white">
                            <h3 class="font-bold text-gray-800 flex items-center gap-2">
                                <i class="ph ph-flag text-indigo-600 text-xl"></i> Keputusan Akhir
                            </h3>
                        </div>
                        <div class="p-6">
                            <form id="statusForm" class="space-y-4">
                                <div>
                                    <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Set Status
                                        Penelitian</label>
                                    <select name="status"
                                        class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all">
                                        <option value="Selesai Tuntas" <%=proposal.status==='Selesai Tuntas'
                                            ? 'selected' : '' %>>Selesai Tuntas</option>
                                        <option value="Selesai Tidak Tuntas" <%=proposal.status==='Selesai Tidak Tuntas'
                                            ? 'selected' : '' %>>Selesai Tidak Tuntas</option>
                                        <option value="Tidak Selesai" <%=proposal.status==='Tidak Selesai' ? 'selected'
                                            : '' %>>Tidak Selesai</option>
                                    </select>
                                </div>
                                <button type="submit"
                                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 rounded-lg text-sm shadow-md shadow-indigo-200 transition-all flex items-center justify-center gap-2">
                                    <i class="ph ph-floppy-disk text-lg"></i> Simpan Status
                                </button>
                            </form>
                            <div id="statusMsg" class="mt-4 text-center text-sm font-medium"></div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        document.getElementById('statusForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const btn = e.target.querySelector('button');
            const status = e.target.status.value;
            const msg = document.getElementById('statusMsg');

            // Loading state
            btn.disabled = true;
            btn.innerHTML = '<i class="ph ph-circle-notch animate-spin text-lg"></i> Menyimpan...';

            try {
                const formData = new URLSearchParams();
                formData.append('status', status);

                const res = await fetch(location.pathname + '/update-status', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: formData.toString()
                });

                const data = await res.json();

                msg.textContent = data.message;
                msg.className = data.success ? 'mt-4 text-center text-sm font-bold text-green-600' : 'mt-4 text-center text-sm font-bold text-red-600';

                if (data.success) {
                    setTimeout(() => location.reload(), 1000);
                } else {
                    btn.disabled = false;
                    btn.innerHTML = '<i class="ph ph-floppy-disk text-lg"></i> Simpan Status';
                }
            } catch (error) {
                msg.textContent = "Terjadi kesalahan koneksi.";
                msg.className = 'mt-4 text-center text-sm font-bold text-red-600';
                btn.disabled = false;
                btn.innerHTML = '<i class="ph ph-floppy-disk text-lg"></i> Simpan Status';
            }
        });
    </script>

    <%- include('../../partials/footer') %>