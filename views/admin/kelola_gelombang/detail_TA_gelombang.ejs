<%- include('../../partials/header') %>

<script src="https://cdn.tailwindcss.com"></script>
<script src="https://unpkg.com/@phosphor-icons/web"></script>

<div class="flex-1 flex flex-col h-screen overflow-hidden relative bg-gray-100">

    <header class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-4 sm:px-6 lg:px-8 shrink-0">
        <button class="md:hidden p-2 text-gray-500 hover:bg-gray-100 rounded-lg">
            <i class="ph ph-list text-2xl"></i>
        </button>
        
        <h1 class="text-lg font-semibold text-gray-800 hidden sm:block">Dashboard Admin</h1>

        <div class="flex items-center gap-4">
            <div class="text-right hidden sm:block">
                <p class="text-sm font-medium text-gray-700"><%= typeof user !== 'undefined' ? user.name : 'Administrator' %></p>
                <p class="text-xs text-gray-500">Super Admin</p>
            </div>
            <div class="h-9 w-9 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold border border-indigo-200 shadow-sm">
                <i class="ph ph-user"></i>
            </div>
        </div>
    </header>

    <main class="flex-1 overflow-y-auto p-8">
        
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Kelola Gelombang List Gelombang</h2>

            <a href="/admin/gelombang/detail/<%= tahun %>/tambah" class="flex items-center justify-center gap-2 bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 px-4 py-2 rounded-lg text-sm font-semibold transition-colors shadow-sm no-underline">
                Tambah Gelombang
            </a>
        </div>

        <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6 flex flex-col" style="min-height: 600px;">
            
            <div class="overflow-hidden">
                <table class="w-full text-left border-collapse">
                    
                    <thead>
                        <tr>
                            <th class="py-4 px-4 w-16 text-center font-bold text-gray-600 border-b-2 border-gray-300 border-r border-gray-200">
                                No.
                            </th>
                            
                            <th class="py-4 px-6 font-bold text-gray-600 border-b-2 border-gray-300 border-r border-gray-200">
                                Nama Gelombang
                            </th>
                            
                            <th class="py-4 px-6 font-bold text-gray-600 text-center border-b-2 border-gray-300 border-r border-gray-200">
                                Periode Gelombang
                            </th>
                            
                            <th class="py-4 px-6 font-bold text-gray-600 text-center border-b-2 border-gray-300 border-r border-gray-200">
                                Total Proposal
                            </th>
                            
                            <th class="py-4 px-6 font-bold text-gray-600 text-center border-b-2 border-gray-300">
                                Total Dana
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        <% if (typeof gelombangList !== 'undefined' && gelombangList.length > 0) { %>
                            
                            <% gelombangList.forEach((item, index) => { %>
                            <tr>
                                <td class="py-5 px-4 text-center text-gray-500 border-b border-gray-200 border-r border-gray-200">
                                    <%= index + 1 %>
                                </td>
                                
                                <td class="py-5 px-6 text-gray-800 border-b border-gray-200 border-r border-gray-200">
                                    <%= item.nama %>
                                </td>
                                
                                <td class="py-5 px-6 text-center text-gray-800 border-b border-gray-200 border-r border-gray-200">
                                    <%= item.periode %>
                                </td>
                                
                                <td class="py-5 px-6 text-center text-gray-800 border-b border-gray-200 border-r border-gray-200">
                                    <%= item.proposal %>
                                </td>
                                
                                <td class="py-5 px-6 text-center text-gray-800 border-b border-gray-200">
                                    <%= item.dana %>
                                </td>
                            </tr>
                            <% }) %>

                        <% } else { %>
                            <tr>
                                <td colspan="5" class="px-6 py-12 text-center text-gray-400">
                                    Tidak ada data gelombang untuk tahun ini.
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <div class="mt-auto pt-2 border-t border-gray-400">
                <div class="flex justify-end">
                    <p class="text-sm font-semibold text-gray-800">
                        Total Gelombang : <%= typeof gelombangList !== 'undefined' ? gelombangList.length : 0 %>
                    </p>
                </div>
            </div>
            
        </div>

    </main>
</div>

<%- include('../../partials/footer') %>