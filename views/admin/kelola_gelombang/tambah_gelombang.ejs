<%- include('../../partials/header') %>

<script src="https://cdn.tailwindcss.com"></script>
<script src="https://unpkg.com/@phosphor-icons/web"></script>

<div class="flex-1 flex flex-col h-screen overflow-hidden relative bg-gray-50">

    <header class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-4 sm:px-6 lg:px-8 shrink-0 z-10">
        <button class="md:hidden p-2 text-gray-500 hover:bg-gray-100 rounded-lg">
            <i class="ph ph-list text-2xl"></i>
        </button>
        
        <h1 class="text-lg font-semibold text-gray-800 hidden sm:block">Dashboard Admin</h1>

        <div class="flex items-center gap-4">
            <div class="text-right hidden sm:block">
                <p class="text-sm font-medium text-gray-700"><%= typeof user !== 'undefined' ? user.name : 'Administrator' %></p>
                <p class="text-xs text-gray-500">Super Admin</p>
            </div>
            <div class="h-9 w-9 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold border border-indigo-200 shadow-sm">
                <i class="ph ph-user"></i>
            </div>
        </div>
    </header>

    <main class="flex-1 overflow-y-auto p-4 sm:p-8">
        
        <div class="mb-6">
            <nav class="flex mb-2 text-sm text-gray-500">
                <a href="/admin/gelombang" class="hover:text-indigo-600">Kelola Gelombang</a>
                <span class="mx-2">/</span>
                <a href="/admin/gelombang/detail/<%= tahun %>" class="hover:text-indigo-600">Detail <%= tahun %></a>
                <span class="mx-2">/</span>
                <span class="text-gray-900 font-medium">Tambah Tahun Akademik</span>
            </nav>
            <h2 class="text-2xl font-bold text-gray-900">Kelola Gelombang Tambah Gelombang</h2>
        </div>

        <div class="bg-white border border-gray-200 rounded-xl shadow-sm p-8 flex flex-col relative" style="min-height: 500px;">
            
            <form action="/admin/gelombang/store-gelombang" method="POST" class="flex-1 flex flex-col w-full">
                
                <div class="max-w-3xl">
                    
                    <div class="mb-5">
                        <label for="periode" class="block text-sm font-semibold text-gray-700 mb-2">
                            Periode Gelombang
                        </label>
                        <input type="text" 
                               id="periode" 
                               name="periode" 
                               value="<%= tahun %>"
                               class="w-full sm:w-1/2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 block p-3 shadow-sm"
                               readonly>
                        <p class="mt-1 text-xs text-gray-500">Periode mengikuti tahun akademik yang dipilih.</p>
                    </div>

                    <div class="mb-5">
                        <label for="nama_gelombang" class="block text-sm font-semibold text-gray-700 mb-2">
                            Nama Gelombang <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="nama_gelombang" 
                               name="nama_gelombang" 
                               placeholder="Contoh: Gelombang 1"
                               class="w-full bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 block p-3 shadow-sm"
                               required>
                    </div>

                    <div class="mb-6">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Waktu Gelombang <span class="text-red-500">*</span>
                        </label>
                        
                        <div class="flex flex-col sm:flex-row items-center gap-4">
                            <div class="relative w-full sm:w-auto flex-1">
                                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none text-gray-400">
                                    <i class="ph ph-calendar"></i>
                                </div>
                                <input type="date" 
                                       name="waktu_mulai" 
                                       class="bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-10 p-3 shadow-sm" 
                                       required>
                            </div>

                            <span class="text-gray-500 font-medium">Sampai</span>

                            <div class="relative w-full sm:w-auto flex-1">
                                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none text-gray-400">
                                    <i class="ph ph-calendar"></i>
                                </div>
                                <input type="date" 
                                       name="waktu_selesai" 
                                       class="bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-10 p-3 shadow-sm" 
                                       required>
                            </div>
                        </div>
                    </div>

                </div> <div class="mt-auto pt-6 border-t border-gray-100 flex justify-end gap-3">
                    
                    <a href="/admin/gelombang/detail/<%= tahun %>" class="px-5 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-4 focus:ring-gray-200 transition-all no-underline shadow-sm">
                        Batal
                    </a>
                    
                    <button type="submit" class="px-5 py-2.5 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 focus:ring-4 focus:ring-indigo-300 transition-all shadow-md">
                        Simpan
                    </button>

                </div>

            </form>
            
        </div>

    </main>
</div>

<%- include('../../partials/footer') %>